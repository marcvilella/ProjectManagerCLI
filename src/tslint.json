{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            ["home", "app", "common", "board", "calendar", "timesheet"],
            "kebab-case"
        ],
        "max-line-length": [
            true, 
            {
              "limit": 180, 
              "ignore-pattern": "^import [^,]+ from | ^export | implements"
            }
          ]
    }
}
